{
  "compilerOptions": {
    // "target": "esnext",
    // "module": "esnext",
    // "jsx": "preserve",
    // "strict": false,
    "pretty": true,
    // "noImplicitAny": true,
    // "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "outDir": ".next",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "es5",
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": ["./src/client/**/*", "./src/pages/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
